# i3blocks config file

# Global properties
command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=none

# Could be used to show available memory, used memory, and total memory
# by changing the awk command to display $2, $3, or $4 respectively
#[disk-home]
#command=df -h -P -l $HOME | awk '/\/.*/ { print $4; exit 0 }'
#interval=30

# Disk usage
[disk]
label=
interval=30

[memory]
label=  RAM
separator=false
interval=30

[cpu_usage]
#label= CPU
label= CPU
interval=10
min_width=CPU: 100.00%
align=center

# Show the name of the wireless network
[wireless]
label=
command=iwgetid -r
color=#00FF00
interval=5
separator=false

# Show the wifi strength
[wifi]
instance=wlp3s0
interval=10

[iface]
color=#00FF00
interval=10

[ram]
label=
command=/usr/libexec/i3blocks/memory | grep -E -o '[0-9].[0-9]?G'
interval=30

[battery]
label=BAT
label=⚡
interval=30

[time]
command=date '+ %Y-%m-%d . %I:%M:%S %p '
interval=5

